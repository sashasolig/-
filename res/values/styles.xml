<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- =============================================================== -->
	<!-- Generic Styles -->
	<!-- =============================================================== -->

	<dimen name="page_margin_bl">2sp</dimen>
	<dimen name="content_left_margin_bl">8sp</dimen>
	
	
	
	<style name="tvBurialItem" parent="@android:style/Widget.TextView">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:textStyle">bold</item>
   	</style>
	
	<!-- EditText Big -->
	<style name="editTextInput" parent="@android:style/Widget.EditText">
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:ems">30</item>
	    <item name="android:textStyle">bold</item>
   	</style>

	<style name="hidden">
		<item name="android:visibility">gone</item>
    </style>
	
	<style name="activity">
		<item name="android:background">@drawable/monument_bg</item>
    </style>
    
	<style name="list">
	    <item name="android:dividerHeight">1px</item>
	    <item name="android:listSelector">@drawable/list_selector</item>
    </style>
    <style name="list_color_divider" parent="list">
	    <item name="android:divider">@color/steel_blue</item>	    
    </style>
    
    <style name="AppTheme" parent="android:Theme.Light" />
    
    <!-- Tabs -->
	<style name="tab_header">
		<item name="android:background">@drawable/tab_header</item>    
	</style>
	<style name="tab_header_line">
		<item name="android:background">@color/tab_active_down</item>	    
	</style>

	<style name="text">
		<item name="android:textColor">@color/text_view_color</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">16sp</item>
    </style>
    
	<style name="edittext" parent="@android:style/Widget.EditText">
    	<item name="android:textColor">@color/edit_text_color</item>    	
	</style>
		
	<!-- Popup Dialogs -->
	<style name="popUpHeader">
	    <item name="android:textColor">#FFF</item>
	    <item name="android:background">#496B90</item>
	    <item name="android:drawablePadding">5dp</item>	    	    
	    <item name="android:gravity">center_vertical</item>	    	    
	    <item name="android:padding">5dp</item>	    	    
	    <item name="android:textSize">22dp</item>	    	    
   	</style>
	<!-- Dialogs -->
	<style name="mbDialogPanel">
	    <item name="android:background">@color/dialogBg</item>
	    <item name="android:gravity">center</item>
	    <item name="android:padding">0dp</item>
	</style>		
	<color name="dialogBg">#88000000</color>
	<style name="horizontalProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:minWidth">200.0dip</item>
	</style>		
	<style name="dialogPanel">
	    <item name="android:background">@color/dialogBg</item>
	    <item name="android:gravity">center</item>
	    <item name="android:padding">10dp</item>
	</style>		
	<style name="dialogHeaderText">
		<item name="android:textColor">#FF8800</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">22sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:padding">2dp</item>
	</style>		
	<style name="dialogText">
		<item name="android:textColor">#FFF</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:gravity">center</item>
	    <item name="android:padding">5dp</item>
	</style>		
	<style name="dialog">
		<item name="android:textColor">#FFF</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:background">@color/dialogBg</item>
	    <item name="android:gravity">center</item>
	</style>		
	
		
	<style name="text_header" parent="@android:style/TextAppearance.Widget.EditText">
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:background">@color/table_header</item>
	</style>
	<style name="text_link">
	    <item name="android:textColor">#80a7d1</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textSize">16sp</item>	    
	</style>
	<style name="text_row">
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">16sp</item>	        
	</style>		
	
	<style name="text_small">
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">12sp</item>
	</style>		
	
	<style name="list_divider">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">5dip</item>
		<item name="android:background">#00000000</item>
	</style>	
	
	<!-- Buttons -->
	<style name="button">
		<item name="android:background">@drawable/button</item>
		<item name="android:textColor">#000</item>
		<item name="android:textSize">@dimen/btn_text_size</item>
		<item name="android:paddingTop">1dip</item>
		<item name="android:paddingBottom">1dip</item>
		<item name="android:paddingLeft">1dip</item>
		<item name="android:paddingRight">1dip</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="buttonAdd" parent="button">
		<item name="android:drawableBottom">@android:drawable/ic_menu_add</item>		
	</style>
	<style name="buttonDelete" parent="button">
		<item name="android:drawableBottom">@android:drawable/ic_menu_delete</item>		
	</style>
	

	<dimen name="buttonH">70dp</dimen>
	
	<!-- Context Menu -->
	<style name="context_menu_item">
	    <item name="android:background">#444</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:minHeight">50dp</item>
	    <item name="android:gravity">center_vertical</item>
	</style>

	<style name="context_menu_item_text">
	    <item name="android:background">#444</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:textStyle">normal</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:minHeight">50dp</item>
	    <item name="android:gravity">center_vertical</item>
	</style>

	<style name="context_menu_list">
	    <item name="android:dividerHeight">1px</item>
	    <item name="android:listSelector">@drawable/list_selector</item>
	    <item name="android:divider">@color/steel_blue</item>
	    <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
	</style>
	
</resources>
